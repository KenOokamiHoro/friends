# planet.js configuration

planet:
  name: 吐槽大王星球 # Site title
  tagline:  # Site tagline
  description: 吐槽大王的朋友们 # Site description
  link: https://planet.tcdw.net # Site link, do NOT include tailing slash '/'
  locale: zh # Site locale
  owner_name: tcdw # Your name
  owner_email: admin@tcdw.net # Your email
  theme: pure # theme under templates directory
  output: public # output directory, make sure your web server can read in this place
  timeout: 30 # request timeout in seconds
  items: 100 # how many posts should be displayed?
  items_feed: 200 # maximum posts in feed
  display_length: 2000 # posts longer than this characters, a summary will be displayed (if available)
  time_format: MMMM Do YYYY h:mm:ss A # See http://momentjs.com/docs/#/displaying/ for details
  ttl: 120 # TimeToLive minutes to cache site feed

secure:
  proxy: # Leave blank if you don't use an http proxy
  allowedTags: # set to true to allow any tags, or [] to disallow any.
  - h1
  - h2
  - h3
  - h4
  - h5
  - h6
  - blockquote
  - p
  - a
  - ul
  - ol
  - nl
  - li
  - b
  - i
  - s
  - g
  - strong
  - em
  - strike
  - del
  - pre
  - code
  - kbd
  - hr
  - br
  - div
  - table
  - thead
  - tbody
  - tr
  - th
  - td
  - caption
  - img
  - sup
  - sub
  - span
  - font
  - style
  - svg
  - defs
  - path
  - use
  allowedAttributes:
    a:
    - href
    - name
    - target
    img:
    - src
  selfClosing:
  - img
  - br
  - hr
  allowedSchemes:
  - http
  - https
  - ftp
  - mailto
  allowProtocolRelative: true

people:
- name: 吐槽大王部落格
  avatar: admin@tcdw.net
  link: https://www.tcdw.net/rss/
<% for (var i in list) { %><% for (var j in list[i].item) { %><%
if (list[i].item[j].feed != "") {
%>- name: <%- list[i].item[j].name %>
  link: <%- list[i].item[j].feed %>
  avatar: <%- list[i].item[j].avatar %>
<% } %><% } %><% } %>